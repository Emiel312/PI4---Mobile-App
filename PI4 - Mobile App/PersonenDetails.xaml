<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PI4___Mobile_App.PersonenDetails"
             Title="PersonenDetails">
    <ContentPage.ToolbarItems>
        <ToolbarItem IconImageSource="trash.png" Clicked="VerwijderContact_Clicked"
        />
    </ContentPage.ToolbarItems>
    <VerticalStackLayout>
        <Label x:Name="LblVoornaam" Text="{Binding Voornaam}"/>
        <Label x:Name="LblAchternaam" Text="{Binding Achternaam}"/>
        <Image Source="{Binding Afbeelding}"/>
    </VerticalStackLayout>
</ContentPage>